<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  metal:use-macro="context/main_template/macros/master"
  i18n:domain="eea">

<body>
  <metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core">
      <div tal:define="
        folderContents folderContents | python:context.getFolderContents();
        Batch python:modules['Products.CMFPlone'].Batch;
        b_start python:request.get('b_start', 0);
        batch python:isinstance(folderContents, Batch) and folderContents or Batch(folderContents, 100, int(b_start), orphan=2);
        num_resultats python: batch.sequence_length">

        <div class="accordion" id="accordion_icons" i18n:domain="apuntador.theme">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <div class="row-fluid">
                        <div class="span12 num_resultats">
                            <span i18n:translate="">Tens</span>
                            <span class="num" tal:content="num_resultats" />
                            <span i18n:translate="">recursos mostrats</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="eea-preview-items">
          <tal:co condition="python: num_resultats == 0">
              <a class="accordion-toggle" tal:attributes="href context/absolute_url">
                  <i class="fa fa-refresh"></i>
                  <span i18n:translate="">Veure tots</span>
              </a>
          </tal:co>
          <tal:entries repeat="brain batch">
            <tal:entry
              define="doc brain/getObject|nothing"
              condition="exists:doc/@@faceted-preview-item"
              replace="structure doc/@@faceted-preview-item" />
          </tal:entries>
        </div>

        <div metal:use-macro="context/batch_macros/macros/navigation" />

      </div>

    </metal:block>
  </metal:content-core>
</body>
</html>
