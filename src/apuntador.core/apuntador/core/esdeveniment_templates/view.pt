<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="apuntador.core">

<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <div class="row-fluid">
            <div class="span12 sobretitol" i18n:translate="">
                Esdeveniment seleccionat
            </div>
        </div>

        <div class="row-fluid vevent" 
             itemscope itemtype="http://schema.org/Event"
             tal:define="data nocall:view/data;
                         dades_event_accessor view/get_dades_event_accessor;
                         scales context/@@images">
            <div class="span12 event_inner">
                <div class="row-fluid titol">
                    <div class="span12">
                        <h1 class="titol_esdev" tal:content="context/Title" />
                    </div>
                </div>
                <div class="row-fluid compartir">
                    <div class="span12">
                        <div class="addthis_toolbox addthis_default_style addthis_32x32_style"
                             tal:attributes="addthis:url context/absolute_url;
                                             addthis:title context/Title;
                                             addthis:description context/Description;">
                            <a class="addthis_button_facebook" fb:like:layout="button_count"></a>
                            <a class="addthis_button_twitter"></a>
                            <a class="addthis_button_google_plusone_share"></a>
                            <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
                            <span i18n:translate="" class="comparteix">Comparteix aquest acte a les xarxes socials</span>
                        </div> 
                        <script type="text/javascript">
                            if (window.addthis) {
                                addthis.toolbox('.addthis_toolbox');
                            }
                        </script>
                    </div>
                </div>
                <div class="row-fluid">
                    <div class="span8 info_esq">
                        <div class="row-fluid imatge">
                            <div class="span12">
                                <tal:co condition="context/event_image">
                                    <img class="img-responsive" 
                                         itemprop="image"
                                         tal:define="thumbnail python: scales.scale('event_image', width=2000, height=2000);"
                                         tal:condition="thumbnail"
                                         tal:attributes="src thumbnail/url" />
                                </tal:co>
                                <tal:co condition="not: context/event_image">
                                    <tal:def tal:define="imatge view/getEventImage;
                                                         scales imatge/@@images">
                                        <img class="img-responsive" 
                                             itemprop="image"
                                             tal:define="thumbnail python: scales.scale('image', width=2000, height=2000);"
                                             tal:condition="thumbnail"
                                             tal:attributes="src thumbnail/url" />
                                    </tal:def>
                                </tal:co>
                            </div>
                        </div>
                        <div class="row-fluid text_event">
                            <div class="span12">
                                <p class="desc" itemprop="description" tal:content="context/Description" />
                                <p class="cos" tal:condition="dades_event_accessor/text" tal:content="structure dades_event_accessor/text" />
                            </div>
                        </div>
                        <div class="row-fluid mes_info_mapa">
                            <div class="span12">
                                <dl>
                                    <tal:co condition="context/event_url">
                                        <dt class="info" i18n:translate="">Més informació</dt>
                                        <dd tal:content="context/event_url" />
                                    </tal:co>
                                    
                                    <dt class="mapa dt_mapa" i18n:translate="">Mapa de localització</dt>
                                    <dd class="dd_mapa">
                                        <div tal:replace="structure provider:plone.abovecontentbody" />
                                    </dd>

                                </dl>
                            </div>
                        </div>
                    </div>
                    <div class="span4 info_dre">
                        <dl>
                            <dt tal:condition="dades_event_accessor/location" class="espai" i18n:translate="">Location</dt>
                            <dd tal:condition="dades_event_accessor/location" itemprop="location" tal:content="dades_event_accessor/location" />

                            <dt class="dates" i18n:translate="">Dates</dt>
                            <!-- <dd tal:define="here_url context/@@plone_context_state/object_url;
                                            portal_url context/@@plone_portal_state/portal_url;">
                                <span tal:content="structure view/get_html_dates" />

                                <ul class="hCalendar-hidden">
                                    <li><a itemprop="url" class="url" href="" tal:attributes="href data/url" tal:content="data/url">url</a></li>
                                    <li itemprop="summary" class="summary" tal:content="data/title">title</li>
                                    <li itemprop="startDate" class="dtstart" tal:content="data/start/isoformat">start</li>
                                    <li itemprop="endDate" class="dtend" tal:content="data/end/isoformat">end</li>
                                    <li itemprop="description" class="description" tal:content="data/description">description</li>
                                </ul>

                                <a tal:attributes="href string:$here_url/ics_view"
                                   title="Download this event in iCal format"
                                   i18n:attributes="title title_add_to_ical;">
                                    <img tal:attributes="src string:${portal_url}/++resource++plone.app.event/icon_export_ical.png"/>
                                    <span i18n:translate="label_add_to_ical">iCal</span>
                                </a>
                            </dd> -->
                            <dd tal:define="start_tzname data/timezone;
                                            start_utcdelta python:data.start.tzinfo.utcoffset(data.start);
                                            start_utcoffset python:(start_utcdelta.days*86400+start_utcdelta.seconds)*100/60/60;">
                                <tal:date replace="structure python:view.formatted_date(context)" />
                                <div tal:define="occs view/next_occurrences;"
                                     tal:condition="python:len(occs) > 1">
                                    <br/><span i18n:translate="">More occurrences of this event:</span>
                                    <ul>
                                        <li tal:repeat="occ occs">
                                            <tal:date replace="structure python:view.formatted_date(occ)" />
                                        </li>
                                    </ul>
                                </div>
                            </dd>

                            <tal:co define="etiquetes view/get_etiquetes" condition="etiquetes">
                                <dt class="tags" i18n:translate="">Etiquetes</dt>
                                <dd>
                                    <span class="etiqueta" tal:repeat="tag etiquetes" tal:content="tag" />
                                </dd>
                            </tal:co>

                            <tal:co define="publics view/get_publics" condition="publics">
                                <dt class="publics" i18n:translate="">Públic</dt>
                                <dd>
                                    <span tal:repeat="tag publics" tal:content="tag" />
                                </dd>
                            </tal:co>

                            <tal:co define="cicles view/get_cicles" condition="cicles">
                                <dt class="cicles" i18n:translate="">Cicles</dt>
                                <dd>
                                    <span tal:repeat="tag cicles" tal:content="tag" />
                                </dd>
                            </tal:co>

                            <!-- <dt class="descriptors" i18n:translate="">Descriptors</dt>
                            <dd>
                                <span tal:repeat="tag view/get_descriptors" tal:content="tag" />
                            </dd> -->

                            <!-- <dt class="portals" i18n:translate="">Portals</dt>
                            <dd>
                                <span tal:repeat="tag view/get_portals" tal:content="tag" />
                            </dd>

                            <dt class="paraules" i18n:translate="">Paraules clau</dt>
                            <dd tal:content="context/event_keywords" /> -->

                            <!-- <dt i18n:translate="">Destacat?</dt>
                            <dd tal:content="context/destacat" />

                            <dt i18n:translate="">Aquest acte va a paper?</dt>
                            <dd tal:content="context/paper" /> -->

                            <tal:co condition="context/inscriptions_available">
                                <dt class="inscripcions" i18n:translate="">Període d'inscripció</dt>
                                <dd>
                                    del <span tal:content="view/get_start_inscription" />
                                    al <span tal:content="view/get_end_inscription" />
                                </dd>
                            </tal:co>

                        </dl>
                    </div>
                </div>
                <div class="row-fluid denunciar">
                    <div class="span12">
                        <a tal:attributes="href python:context.absolute_url()+'/content_status_modify?workflow_action=denuncia'">
                            <img src="++resource++apuntador.theme.images/icon_denuncia.png" />
                            <span i18n:translate="">Denuncia aquest esdeveniment</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>