<div class="span12 view1 item_wrapper" tal:define="dades_event_accessor view/get_dades_event_accessor">
    <div class="row-fluid foto_tags_titol_lloc_data">
        <div class="span3 foto" tal:define="scales context/@@images">

            <div id="container-foto">
                <div id="dummy"></div>
                <div id="element">
                    <tal:co condition="context/event_image">
                        <div id="element" tal:define="scales context/@@images;
                                                      thumbnail python: scales.scale('event_image', width=2000, height=2000);"
                            tal:attributes="style python:'background-image: url(' + thumbnail.url + ')'" tal:condition="thumbnail"></div>
                    </tal:co>
                    <tal:co condition="not: context/event_image">
                        <div id="element" tal:define="imatge view/getEventImage;
                                                      scales imatge/@@images;
                                                      thumbnail python: scales.scale('image', width=2000, height=2000);"
                            tal:attributes="style python:'background-image: url(' + thumbnail.url + ')'"></div>
                    </tal:co>
                </div>
            </div>

        </div>
        <div class="span9 tags_titol_lloc_data">
            <a tal:attributes="href context/absolute_url; title context/Title">
                <p class="all_tags">
                    <span tal:repeat="tag view/get_etiquetes" tal:content="tag" />
                </p>
                <p class="titol_esdev" tal:content="context/Title" />

                <p class="lloc" itemprop="location" tal:content="view/get_location" />

                <!-- <tal:repl replace="structure view/get_html_dates" /> -->
                <tal:def tal:define="data nocall:view/data;
                                     start_tzname data/timezone;
                                     start_utcdelta python:data.start.tzinfo.utcoffset(data.start);
                                     start_utcoffset python:(start_utcdelta.days*86400+start_utcdelta.seconds)*100/60/60;">
                    <tal:date replace="structure python:view.formatted_date(context)" />
                    <div tal:define="occs view/next_occurrences"
                         tal:condition="python:len(occs) > 1">
                        <br/><span i18n:translate="">Aquest esdeveniment es repetir√† els dies:</span>
                        <ul class="dates_recursives">
                            <span tal:repeat="occ occs">
                                <tal:date replace="structure python:view.formatted_date(occ)" />
                            </span>
                        </ul>
                    </div>
                </tal:def>
            </a>
        </div>
    </div>

    <div class="row-fluid descripcio">
        <div class="span12">
            <span tal:content="context/Description" />
        </div>
    </div>

    <div class="row-fluid addthis">
        <div class="addthis_toolbox addthis_default_style addthis_32x32_style span12"
             tal:attributes="addthis:url context/absolute_url;
                             addthis:title context/Title;
                             addthis:description context/Description;">
            <div class="inner">
                <a class="addthis_button_facebook" fb:like:layout="button_count"></a>
                <a class="addthis_button_twitter"></a>
                <a class="addthis_button_google_plusone_share"></a>
                <script type="text/javascript">var addthis_config = {"data_track_addressbar":true};</script>
                <span i18n:translate="" class="comparteix">Comparteix aquest acte a les xarxes socials</span>
            </div>
        </div> 
        <script type="text/javascript">
            if (window.addthis) {
                addthis.toolbox('.addthis_toolbox');
            }
        </script>     
    </div>
</div>
